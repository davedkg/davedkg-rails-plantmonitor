- @plant_readings.each do |plant_reading|
  %tr
    %td= time_ago_in_words(plant_reading.created_at) + " ago"
    %td= "#{plant_reading.temperature} C"
    %td= "#{plant_reading.humidity}%"
    %td= plant_reading.soil_moisture
    %td= plant_reading.light_intensity
    %td= plant_reading.rain_moisture
    %td.text-right
      - if policy(plant_reading).destroy?
        = link_to [@plant, plant_reading], class: "btn btn-outline-danger btn-sm", data: { method: :delete, confirm: "Are you sure you want to delete this reading?" } do
          %i.fa.fa-trash
          .d-none.d-md-inline
            Delete